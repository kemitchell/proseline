{
  "type": "object",
  "properties": {
    "type": {
      "const": "note"
    },
    "draft": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "parent": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      ]
    },
    "selection": {
      "type": "object",
      "properties": {
        "start": {
          "type": "number",
          "multipleOf": 1,
          "minimum": 0
        },
        "end": {
          "type": "number",
          "multipleOf": 1,
          "minimum": 0
        }
      },
      "required": [
        "start",
        "end"
      ],
      "additionalProperties": false
    },
    "text": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "oneOf": [
    {
      "required": [
        "type",
        "draft",
        "parent",
        "text",
        "timestamp"
      ]
    },
    {
      "required": [
        "type",
        "draft",
        "range",
        "text",
        "timestamp"
      ]
    }
  ],
  "additionalProperties": false
}
