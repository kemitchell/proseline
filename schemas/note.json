{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "note"
    },
    "draft": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "parent": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "range": {
      "type": "object",
      "properties": {
        "start": {
          "type": "number",
          "multipleOf": 1,
          "minimum": 0
        },
        "end": {
          "type": "number",
          "multipleOf": 1,
          "minimum": 1
        }
      },
      "required": [
        "start",
        "end"
      ],
      "additionalProperties": false
    },
    "text": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "anyOf": [
    {
      "required": [
        "type",
        "draft",
        "text",
        "timestamp",
        "range"
      ]
    },
    {
      "required": [
        "type",
        "draft",
        "text",
        "timestamp",
        "parent"
      ]
    }
  ],
  "additionalProperties": false
}
