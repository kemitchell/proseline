{
  "browserify": {
    "transform": [
      "envify",
      "unassertify",
      "es2020",
      "uglifyify"
    ]
  },
  "dependencies": {
    "fast-diff": "^1.1.2",
    "is-sha-256-hex-digest": "^1.0.0",
    "json-parse-errback": "^2.0.1",
    "json-stable-stringify": "^1.0.1",
    "nanomorph": "^5.1.3",
    "nanoraf": "^3.0.1",
    "run-parallel": "^1.1.6",
    "run-series": "^1.1.4",
    "sodium-javascript": "^0.5.4"
  },
  "devDependencies": {
    "ajv": "^5.3.0",
    "browserify": "^14.5.0",
    "browserify-header": "^0.9.2",
    "browserify-licenses": "^1.4.5",
    "chromedriver": "^2.33.2",
    "ecstatic": "^3.0.0",
    "envify": "^4.1.0",
    "es2020": "^1.1.9",
    "husky": "^0.14.3",
    "licensee": "^4.5.0",
    "licensify": "^3.1.3",
    "lint-staged": "^5.0.0",
    "node-sass": "^4.7.1",
    "npm-run-all": "^4.1.2",
    "standard": "^10.0.3",
    "tape": "^4.8.0",
    "uglify-js": "^3.1.10",
    "uglifyify": "^4.0.4",
    "unassertify": "^2.1.0",
    "watchify": "^3.9.0",
    "webdriverio": "^4.9.8"
  },
  "lint-staged": {
    "*.js": "standard"
  },
  "private": true,
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:css": "node-sass --output-style compressed styles/styles.sass > build/styles.css",
    "build:js": "browserify -p [ browserify-header --file header.js ] -p licensify index.js | uglifyjs --comments warnings=false > build/browser.js",
    "build:licenses": "brlicenses -f full index.js > build/LICENSES",
    "chromedriver": "chromedriver --url-base=/wd/hub",
    "licenses": "licensee --production --errors-only | tee licenses.log",
    "lint": "standard",
    "precommit": "lint-staged",
    "test": "tape test/*.test.js",
    "watch:css": "node-sass --watch --source-map true --output build styles/styles.sass",
    "watch:js": "watchify --ignore-transform uglifyify index.js -o build/browser.js -dv"
  }
}
